#include <iostream>
using namespace std;

int main() {
    // Diya (lamp) design using ASCII art
    cout << "        *\n";
    cout << "       ***\n";
    cout << "      *****\n";
    cout << "     *******\n";
    cout << "      *****\n";
    cout << "       ***\n";
    cout << "        *\n";
    cout << "      =====\n";
    cout << "     (_____) \n\n";

    // Print colorful Happy Diwali message (works in most terminals)
    cout << "\033[1;33m"; // Yellow
    cout << "✨✨✨ HAPPY DIWALI ✨✨✨\n";
    cout << "\033[0m";    // Reset color

    cout << "\nMay your life shine bright like this Diya!\n";
    cout << "Wishing you joy, peace, and prosperity.\n";

    return 0;
}